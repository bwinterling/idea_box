<div class="col-md-6 col-xs-6">
  <form action='/<%= idea.id %>' method='POST' role="form">
    <p>
      <% if idea.id %>
        <h3>Edit your Idea:</h3>
      <% else %>
        <h3>Your Idea:</h3>
      <% end %>
    </p>
    <% if idea.id %>
      <input type="hidden" name="_method" value="PUT" />
    <% end %>
    <div class="form-group">
      <input type='text' placeholder="Title" class="form-control" name='idea[title]' value="<%= idea.title %>"/>
    </div>
    <div class="form-group">
      <textarea placeholder="Description" class="form-control" name='idea[description]'><%= idea.description %></textarea>
    </div>
    <div class="form-group">
      <input type='text' style="display: inline" placeholder="Tags" class="form-control" name='idea[tags]' value="<%= idea.tags_array.join(",") %>"/>
      Use a comma to separate tags
      <select name="idea[group]" class="form-control" style="display: inline">
        <option value="Personal">Personal</option>
        <option value="Work">Work</option>
      </select>
    </div>
    <div class="form-group">
      <input type='submit' class="btn btn-primary btn-lg"/>
    </div>
  </form>
</div>
<div class="col-md-2 col-xs-2">
</div>
<div class="col-md-4 col-xs-4">
  <img src="/images/ideabox.gif" alt="Idea in a Box">
</div>
